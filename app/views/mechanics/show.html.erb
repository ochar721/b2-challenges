<h1><%=@mechanic.name%></h1>
<h4><%=@mechanic.years_experience%></h4>

<h3><%="Rides #{@mechanic.name} is working on:"%></h3>
  <% @mechanic.working_rides.each do |ride|%>
  <p><%=ride.name%></p>
  <%end%>

<div>
  <%= form_with url: "/mechanics/#{@mechanic.id}", method: :post, local: true do |f| %>
    <%= f.label "Rid Id:"%>
    <%=f.number_field :ride_id, required: true%>
    <%= f.submit "Add New Job"%>
    <%end%>
</div>
